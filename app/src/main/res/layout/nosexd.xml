<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#B2EBF2">

        <ImageView
            android:id="@+id/img_noticia1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:src="@drawable/gravity_rush"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/titulo_noticia1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo noticia"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_alignBottom="@id/img_noticia1"
            android:background="#B2EBF2"/>

        <ImageButton
            android:id="@+id/imgbtn_fav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/img_noticia1"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/estrella_gris" />
    </RelativeLayout>

</android.support.v7.widget.CardView>